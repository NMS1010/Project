<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bệnh viện tiêm chủng </title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="CareMed demo project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Src/styles/bootstrap4/bootstrap.min.css">
    <link href="plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Src/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Src/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Src/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Src/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Src/styles/responsive.css">
    <link rel="stylesheet" type="text/css" href="~/Src/styles/about.css">
    <link rel="stylesheet" type="text/css" href="~/Src/styles/about_responsive.css">
    <link rel="stylesheet" type="text/css" href="~/Src/styles/contact.css">
    <link rel="stylesheet" type="text/css" href="~/Src/styles/contact_responsive.css">
</head>
<body>

    <div class="super_container">
        <!-- Header -->
        <header class="header trans_200">
            <!-- Top Bar -->
            <div class="top_bar">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="top_bar_content d-flex flex-row align-items-center justify-content-start">
                                <div class="top_bar_item"><h3 style="color:red">VNVC</h3></div>
                                <div class="top_bar_item"><h3 style="color:red">Hệ thống tiêm chủng</h3></div>
                                <div class="emergencies  d-flex flex-row align-items-center justify-content-start ml-auto">Liên hệ : + 024 47558 623</div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Header Content -->
            <div class="header_container">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="header_content d-flex flex-row align-items-center justify-content-start">
                                <nav class="main_nav ml-auto">
                                    <ul>
                                        <li><a href="~/Home/Index">Trang Chủ</a></li>
                                        <li><a href="#">Liên Hệ</a></li>
                                    </ul>
                                </nav>
                                <div class="hamburger ml-auto"><i class="fa fa-bars" aria-hidden="true"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Menu -->
        <div class="menu_container menu_mm">
            <div class="menu_close_container">
                <div class="menu_close"></div>
            </div>
            <div class="menu_inner menu_mm">
                <div class="menu menu_mm">
                    <ul class="menu_list menu_mm">
                        <li><a href="~/Home/Index">Trang Chủ</a></li>
                        <li><a href="#">Liên Hệ</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="contact">
            <div class="container">
                <div class="row" style="margin-top:100px">
                    <!-- Contact Form -->
                    <div class="col-lg-6 form_col">
                        <div class="contact_form_container">
                            @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                            {
                                <form action="#" id="contact_form" class="contact_form">
                                    <div class="row">
                                        <div class="col-md-6 input_col">
                                            <div class="input_container input_name"><input name="hovaten" type="text" class="contact_input" placeholder="Họa và tên" required="required"></div>
                                        </div>
                                        <div class="col-md-6 input_col">
                                            <div class="input_container"><input name="email" type="email" class="contact_input" placeholder="Email" required="required"></div>
                                        </div>
                                        <div class="col-md-6 input_col" style="margin-top:10px">
                                            <div class="input_container"><input name="phone" type="number" class="contact_input" placeholder="Phone" required="required"></div>
                                        </div>
                                    </div>
                                    <div class="input_container" style="margin-top:10px"><input name="tieude" type="text" class="contact_input" placeholder="Tiêu đề"></div>
                                    <div class="input_container" style="margin-top:10px"><textarea name="noidung" class="contact_input contact_text_area" placeholder="Nội dung" required="required"></textarea></div>
                                    <button style="width:70px;background-color:seagreen" onclick="alert('Thông tin của bạn đã được gửi đi !!!')"> Gửi </button>
                                </form>
                            }
                            </div>
                    </div>
                </div>
                <div class="row map_row">
                    <div class="col">
                        <!-- Contact Map -->
                        <div class="contact_map">
                            <!-- Google Map -->
                            <div class="map">
                                <div id="google_map" class="google_map">
                                    <div class="map_container">
                                        <div id="map"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer_container">
                <div class="container">
                    <div class="row">

                        <!-- Footer - About -->
                        <div class="col-lg-4 footer_col">
                            <div class="footer_about">
                                <ul class="footer_about_list">
                                    <li><div class="footer_about_icon"><img src="images/phone-call.svg" alt=""></div><span>Số điện thoại : + 024 47558 623</span></li>
                                    <li><div class="footer_about_icon"><img src="images/envelope.svg" alt=""></div><span>Email : vnvc@gmail.com</span></li>
                                    <li><div class="footer_about_icon"><img src="images/placeholder.svg" alt=""></div><span>Address: B3 - Xã Đàn - Đống Đa - Hà Nội</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Src/js/jquery-3.2.1.min.js"></script>
    <script src="~/Src/styles/bootstrap4/popper.js"></script>
    <script src="~/Src/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Src/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Src/plugins/easing/easing.js"></script>
    <script src="~/Src/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Src/js/custom.js"></script>

    <script src="~/Src/plugins/greensock/TweenMax.min.js"></script>
    <script src="~/Src/plugins/greensock/TimelineMax.min.js"></script>
    <script src="~/Src/plugins/scrollmagic/ScrollMagic.min.js"></script>
    <script src="~/Src/plugins/greensock/animation.gsap.min.js"></script>
    <script src="~/Src/plugins/greensock/ScrollToPlugin.min.js"></script>
    <script src="~/Src/plugins/progressbar/progressbar.min.js"></script>
    <script src="~/Src/js/about.js"></script>

    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCIwF204lFZg1y4kPSIhKaHEXMLYxxuMhA"></script>
    <script src="~/Src/js/contact.js"></script>

    <script type="text/javascript">

    </script>
</body>
</html>